{
    "dataRoles": [
        {
            "displayName": "Date / Time",
            "name": "DateTime",
            "kind": "Grouping"
        },
        {
            "displayName": "Values",
            "name": "Values",
            "kind": "Measure"
        },
        {
            "displayName": "Series",
            "name": "Series",
            "kind": "Grouping"
        }
    ],
    "dataViewMappings": [
        {
            "conditions": [
              { "DateTime": { "min": 0, "max": 1 }, "Values": { "min": 0 }, "Series": { "min": 0, "max": 1 } }
            ],
            "categorical": {
                "categories": {
                    "for": {
                        "in": "DateTime"
                    },
                    "dataReductionAlgorithm": {
                        "window": { "count": 10000 }
                    } 
                },
                "values": {
                    "group": {
                        "by": "Series",
                        "select": [ 
                            { "for": { "in": "Values" } }, 
                            { "bind": { "to": "DateTime" } }
                        ],
                        "dataReductionAlgorithm": {
                            "top": { "count": 10000 }
                        }
                    }
                }
            }
        }
    ]
}